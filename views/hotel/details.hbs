<section id='viewhotelDetails'>
  {{#with hotel}}
    <h2>Details</h2>
    <div class='hotel-ticket'>
      <div class='hotel-left'>
        <img src='{{imageUrl}}' alt='' />
      </div>
      <div class='hotel-right'>
        <div>
          <h3>{{hotel.name}}</h3>
        </div>
        <div>
          {{city}}
        </div>
        <p><span>Free rooms: {{rooms}}</span> </p>
        {{#if hasUser}}

          {{#if isAuthor}}
            <a href='/hotel/edit/{{_id}}' class='edit'>Edit</a>
            <a href='/hotel/edit/{{_id}}' class='remove'>Delete</a>
          {{else}}
            {{#if isBooked}}
              <p><span class='green'>You already have booked a room</span> </p>
            {{else}}
              <a href='/hotel/book/{{_id}}' class='book'>Book</a>
            {{/if}}
          {{/if}}
        {{/if}}
      </div>

    </div>
  {{/with}}
</section>